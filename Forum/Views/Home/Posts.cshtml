@model IEnumerable<Forum.Models.ForumPost>

@{
    ViewBag.Title = @ViewBag.PostsCategory;
}

    <div class="jumbotron">
        <table class="table">
            <tr>
                <th>
                    User Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ForumUserId)
                    </td>
                    <td>
                        @Html.ActionLink(Convert.ToString(@Html.DisplayFor(modelItem => item.Title)), "Post", new { id = item.ID })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>



        @using (Html.BeginForm())
        {
            @Html.Hidden("ForumCategoryId", @ViewBag.ForumCategoryId as string)
            @Html.Hidden("ForumUserId", "1")
            <br />@Html.Label("Add new post:")
            <br />@Html.Label("Add title:")
            <br />@Html.TextBox("Title", "")
            @Html.ValidationMessage("Title")
            <br /><input type="submit" value="Add" />
        }
        @Html.ActionLink("Back to Categories", "Index", new { id = 1 })
    </div>
